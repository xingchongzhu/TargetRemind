<resources>

    <!-- Base application theme. -->
    <style name="AppThemeTest" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme" parent="@style/HeytapTheme">
        <!-- Customize your theme here. --> .... </style>

    <style name="display_time">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="alarm_lockscreen_thin">
        <item name="android:textSize">@dimen/alarm_info_font_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    <declare-styleable name="DancingView">
        <attr name="lineWidth" format="dimension" />
        <attr name="lineHeight" format="dimension" />
        <attr name="pointColor" format="reference|color" />
        <attr name="lineColor" format="reference|color" />
        <attr name="ballColor" format="reference|color" />
    </declare-styleable>
</resources>
