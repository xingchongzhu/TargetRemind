<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/select_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:text="深圳"
        android:textSize="@dimen/title_size"
        android:textColor="@color/item_text_color"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/current_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_city"
        android:drawableLeft="@drawable/ic_location"
        android:gravity="center_vertical"
        android:hint="@string/current_location"
        android:textColor="@color/blue"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:textSize="@dimen/textvie_item_text_size"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/collect"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_collect"
        android:layout_gravity="center_vertical"
        app:layout_goneMarginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_city"
        android:drawableLeft="@drawable/ic_location"
        android:gravity="center_vertical"
        android:hint="@string/current_location"
        android:textColor="@color/blue"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:textSize="@dimen/textvie_item_text_size"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

    </View>

    <include
        android:id="@+id/serach_layout_manager_root"
        layout="@layout/station_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/edit_margin"
        android:layout_marginRight="@dimen/edit_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wtach.stationremind.views.DancingView
        android:id="@+id/dancing_ball"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/start_remind"
        app:lineColor="#ffffff"
        app:pointColor="#ffffff"
        app:ballColor="#de4848"
        app:lineWidth="100dp"
        app:lineHeight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.6"
        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints">

    </com.wtach.stationremind.views.DancingView>

    <include
        android:id="@+id/bottom_btn_layout"
        layout="@layout/bottom_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_start_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>