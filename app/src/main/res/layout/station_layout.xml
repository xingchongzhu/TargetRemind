<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/target_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/search_edittext_shape"
        android:drawableLeft="@drawable/start_green_route"
        android:drawableRight="@drawable/ic_add"
        android:gravity="center_vertical"
        android:text="@string/seletc_target_station_title"
        android:singleLine="true"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/text_view_color"
        android:textSize="@dimen/textvie_item_text_size" />

    <com.heytap.wearable.support.recycler.widget.RecyclerView
        android:id="@+id/recyler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fadeScrollbars="true"
        android:scrollbars="vertical" />
</LinearLayout>
