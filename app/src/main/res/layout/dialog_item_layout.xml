<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_linerlayout_water_selector"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="14dp"
        android:paddingTop="@dimen/dialog_recycler_item_padding"
        android:paddingBottom="@dimen/dialog_recycler_item_padding"
        android:paddingRight="@dimen/dialog_recycler_item_padding"
        android:paddingLeft="20dp"
        >
    </TextView>
</LinearLayout>
